{
    "name": "gma_1_2_backend",
    "version": "0.0.1",
    "description": "Backend application for 'Gestion de la maintenance autonome 1er et 2eme niveau' of ARADIS",
    "main": "src/index.ts",
    "scripts": {
        "start": "node build/index.js",
        "dev": "nodemon src/index.ts",
        "build": "rm -rf build/* && tsc",
        "test:all": "jest --watchAll=false",
        "test:unit": "jest ./src/__test__/__unit__ --watchAll=false",
        "test:integration": "jest ./src/__test__/__integration__ --watchAll=false --detectOpenHandles",
        "test:all:watch": "jest --watch",
        "test:unit:watch": "jest ./src/__test__/__unit__ --watch",
        "test:integrated:watch": "jest ./src/__test__/__integrated__ --watch",
        "lint": "eslint ./src",
        "lint:fix": "eslint ./src --fix"
    },
    "repository": {
        "type": "git",
        "url": "git+https://gitlab.com/aracompany/aradis/gma-1-2/backend.git"
    },
    "keywords": [
        "ARADIS",
        "GMA-1-2",
        "Backend"
    ],
    "author": "ARA COMPANY",
    "license": "UNLICENSED",
    "bugs": {
        "url": "https://gitlab.com/aracompany/aradis/gma-1-2/backend/issues"
    },
    "homepage": "https://gitlab.com/aracompany/aradis/gma-1-2/backend#readme",
    "dependencies": {
        "cors": "^2.8.5",
        "dotenv": "^16.3.2",
        "express": "^4.18.2",
        "express-async-errors": "^3.1.1",
        "helmet": "^7.1.0",
        "moment": "^2.30.1",
        "mongodb": "^6.3.0",
        "mongoose": "^8.1.0",
        "node-cron": "^3.0.3"
    },
    "devDependencies": {
        "@types/cors": "^2.8.17",
        "@types/express": "^4.17.21",
        "@types/jest": "^29.5.11",
        "@types/node": "^20.11.5",
        "@types/supertest": "^6.0.2",
        "@typescript-eslint/eslint-plugin": "^6.19.0",
        "@typescript-eslint/parser": "^6.19.0",
        "eslint": "^8.56.0",
        "jest": "^29.7.0",
        "mongodb-memory-server": "^9.1.6",
        "nodemon": "^3.0.3",
        "supertest": "^6.3.4",
        "ts-jest": "^29.1.2",
        "ts-node": "^10.9.2",
        "typescript": "^5.3.3"
    }
}
